{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"noEmit": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "test/*.ts"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
